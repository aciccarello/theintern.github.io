.navbar {

	.navbar-item {
		font-family: 'Zilla Slab', serif;
		font-size: 0.85rem;
		font-weight: 500;
		text-transform: uppercase;
	}

	.navbar-brand {
		.navbar-item {
			+above($desktop) {
				padding-left: 0;
			}
			&:hover {
				background: transparent;
			}
			img.site-logo {
				width: 278px;
				max-height: none;
			}
		}
	}
}