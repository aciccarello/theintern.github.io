body,
html {
	font-family: $body-font;
	font-weight: 400;
	line-height: 1.45;
	color: #333;
	fluid(font-size, 14px, 18px);
}

for $size, $i in $sizes {
	h{$i+1} {
		color $heading-color;
		font-size: $size;
		font-weight $heading-weight
		font-family: $heading-font;
		line-height 1.2
		margin: 1.414em 0 0.5em;

		&:first-child {
			margin-top: 0;
		}

		&:not(:last-child) {
			margin-bottom: 1rem;
		}

		for $size, $i in $sizes {
			&.is-{$i+1} {
				font-size: $size;
			}
		}
	}
}

p {
	&:not(:last-child) {
		fluid(margin-bottom, 14px, 18px);
	}
}