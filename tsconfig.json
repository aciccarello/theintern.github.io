{
    "compilerOptions": {
        "target": "es5",
        "module": "none",
        "lib": [
            "dom",
            "es5",
            "es2015",
            "es2015"
        ],
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "inlineSourceMap": false,
        "inlineSources": false,
        "sourceMap": true,
        "outDir": "./public",
        "types": [
            "highlight.js",
            "markdown-it"
        ]
    }
}
